---
import type { Experience } from '../data/cvData';

export interface Props {
  experience: Experience;
  index: number;
}

const { experience, index } = Astro.props;
---

<article class="experience-card" style={`animation-delay: ${index * 0.1}s`}>
  <div class="experience-content">
    <header class="experience-header">
      <h3>{experience.title}</h3>
      <span class="company">{experience.company}</span>
      <div class="experience-meta">
        <span class="date">{experience.period}</span>
        <span class="location">{experience.location}</span>
      </div>
    </header>
    <ul class="experience-points">
      {experience.points.map((point) => (
        <li>{point}</li>
      ))}
    </ul>
  </div>
</article>

<style>
  /* GOV.UK Experience Card Styles */
  .experience-card {
    margin-bottom: var(--spacing-8);
  }

  .experience-content {
    padding: var(--spacing-6);
    background: var(--color-bg);
    border-left: 5px solid var(--color-primary);
    transition: all var(--transition-base);
  }

  .experience-content:hover {
    background: var(--color-bg-secondary);
  }

  .experience-header {
    margin-bottom: var(--spacing-4);
  }

  .experience-header h3 {
    color: var(--color-text);
    font-size: var(--font-size-24);
    font-weight: 700;
    margin: 0 0 var(--spacing-2) 0;
    line-height: var(--line-height-tight);
  }

  .company {
    color: var(--color-text);
    font-weight: 700;
    font-size: var(--font-size-19);
    display: block;
    margin-bottom: var(--spacing-2);
  }

  .experience-meta {
    display: flex;
    gap: var(--spacing-3);
    flex-wrap: wrap;
  }

  .date,
  .location {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-1);
    color: var(--color-text-secondary);
    font-size: var(--font-size-16);
    font-weight: 400;
  }

  .date::before,
  .location::before {
    display: none; /* Remove emojis for cleaner GOV.UK style */
  }

  .experience-points {
    list-style: disc;
    padding-left: var(--spacing-4);
    margin: var(--spacing-3) 0 0 0;
  }

  .experience-points li {
    padding-left: var(--spacing-2);
    margin-bottom: var(--spacing-2);
    color: var(--color-text);
    font-size: var(--font-size-19);
    line-height: var(--line-height-normal);
  }

  .experience-points li:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .experience-card {
      margin-bottom: var(--spacing-6);
    }

    .experience-content {
      padding: var(--spacing-4);
    }

    .experience-header h3 {
      font-size: var(--font-size-19);
    }

    .company {
      font-size: var(--font-size-16);
    }

    .experience-points li {
      font-size: var(--font-size-16);
      margin-bottom: var(--spacing-3);
    }
  }
</style>