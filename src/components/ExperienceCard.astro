---
import type { Experience } from '../data/cvData';

export interface Props {
  experience: Experience;
  index: number;
}

const { experience, index } = Astro.props;
---

<article class="experience-card" style={`animation-delay: ${index * 0.1}s`}>
  <div class="timeline-marker"></div>
  <div class="experience-content">
    <header class="experience-header">
      <h3>{experience.title}</h3>
      <span class="company">{experience.company}</span>
      <div class="experience-meta">
        <span class="date">{experience.period}</span>
        <span class="location">{experience.location}</span>
      </div>
    </header>
    <ul class="experience-points">
      {experience.points.map((point) => (
        <li>{point}</li>
      ))}
    </ul>
  </div>
</article>

<style>
  .experience-card {
    position: relative;
    padding-left: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
    animation: slideInLeft 0.6s ease-out both;
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .timeline-marker {
    position: absolute;
    left: 0;
    top: 8px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-primary);
    border: 3px solid var(--color-bg);
    box-shadow: 0 0 0 4px var(--color-primary-light);
    transition: all var(--transition-base);
    z-index: 2;
  }

  .experience-card:hover .timeline-marker {
    transform: scale(1.3);
    box-shadow: 0 0 0 8px var(--color-primary-light);
  }

  .experience-card::before {
    content: '';
    position: absolute;
    left: 5px;
    top: 20px;
    bottom: -2rem;
    width: 2px;
    background: linear-gradient(180deg, var(--color-primary) 0%, transparent 100%);
    z-index: 1;
  }

  .experience-card:last-child::before {
    display: none;
  }

  .experience-content {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    transition: all var(--transition-base);
  }

  .experience-content:hover {
    box-shadow: var(--shadow-lg);
    transform: translateX(4px);
    border-color: var(--color-primary-light);
  }

  .experience-header {
    margin-bottom: var(--spacing-lg);
  }

  .experience-header h3 {
    color: var(--color-text);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 var(--spacing-xs) 0;
    transition: color var(--transition-base);
  }

  .experience-content:hover h3 {
    color: var(--color-primary);
  }

  .company {
    color: var(--color-primary);
    font-weight: 600;
    font-size: 1.1rem;
    display: block;
    margin-bottom: var(--spacing-sm);
  }

  .experience-meta {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .date,
  .location {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--color-text-tertiary);
    font-size: 0.9rem;
    background: var(--color-bg-secondary);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-full);
    font-weight: 500;
  }

  .date::before {
    content: 'üìÖ';
    font-size: 0.8em;
  }

  .location::before {
    content: 'üìç';
    font-size: 0.8em;
  }

  .experience-points {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .experience-points li {
    position: relative;
    padding-left: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    font-weight: 400;
    line-height: 1.7;
    transition: all var(--transition-base);
  }

  .experience-points li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: bold;
    transition: all var(--transition-base);
  }

  .experience-points li:hover {
    color: var(--color-text);
    transform: translateX(4px);
  }

  .experience-points li:hover::before {
    transform: translateX(-4px);
  }

  .experience-points li:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .experience-card {
      padding-left: var(--spacing-xl);
    }

    .experience-content {
      padding: var(--spacing-lg);
    }

    .experience-header h3 {
      font-size: 1.1rem;
    }

    .company {
      font-size: 1rem;
    }
  }
</style>