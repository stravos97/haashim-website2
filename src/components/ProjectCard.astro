---
import type { Project } from '../data/cvData';

export interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article class="project-card">
  <div class="project-header">
    <h3>
      <a href={`/projects/${project.slug}`} class="project-title-link">{project.name}</a>
    </h3>
    <div class="project-links">
      {project.github && (
        <a href={`https://${project.github}`} target="_blank" rel="noopener noreferrer" aria-label="View on GitHub">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      )}
      {project.live && (
        <a href={`https://${project.live}`} target="_blank" rel="noopener noreferrer" aria-label="View live site">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
            <polyline points="15 3 21 3 21 9"></polyline>
            <line x1="10" y1="14" x2="21" y2="3"></line>
          </svg>
        </a>
      )}
    </div>
  </div>
  
  <p class="project-description">{project.description}</p>
  
  <div class="tech-stack">
    {project.techStack.map((tech) => (
      <span class="tech-tag">{tech}</span>
    ))}
  </div>
  
  {project.metrics && project.metrics.length > 0 && (
    <div class="project-metrics">
      {project.metrics.map((metric) => (
        <div class="metric">{metric}</div>
      ))}
    </div>
  )}
  
  <ul class="project-achievements">
    {project.achievements.map((achievement) => (
      <li>{achievement}</li>
    ))}
  </ul>
  
  <div class="project-footer">
    <a href={`/projects/${project.slug}`} class="view-details-link">
      View Project Details â†’
    </a>
  </div>
</article>

<style>
  /* GOV.UK Project Card Styles */
  .project-card {
    padding: var(--spacing-6);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    background: var(--color-bg-secondary);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-3);
  }

  .project-header h3 {
    font-size: var(--font-size-24);
    font-weight: 700;
    margin: 0;
    flex: 1;
    line-height: var(--line-height-tight);
  }

  .project-title-link {
    color: var(--color-text);
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: all var(--transition-base);
    display: inline-block;
  }

  .project-title-link:hover {
    color: var(--color-link);
    border-bottom-color: var(--color-link);
  }

  .project-title-link:focus {
    outline: var(--focus-width) solid var(--color-focus);
    outline-offset: 2px;
    background-color: var(--color-focus);
    color: var(--color-text);
    padding: 0 var(--spacing-1);
  }

  .project-links {
    display: flex;
    gap: var(--spacing-2);
  }

  .project-links a {
    color: var(--color-link);
    transition: all var(--transition-base);
    padding: var(--spacing-1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-links a:hover {
    color: var(--color-link-hover);
    text-decoration: none;
  }

  .project-links a:focus {
    outline: var(--focus-width) solid var(--color-focus);
    outline-offset: 0;
    background-color: var(--color-focus);
    color: var(--color-text);
  }

  .project-description {
    color: var(--color-text);
    font-size: var(--font-size-19);
    line-height: var(--line-height-normal);
    margin-bottom: var(--spacing-3);
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-2);
    margin-bottom: var(--spacing-3);
  }

  .tech-tag {
    background: var(--color-bg-secondary);
    color: var(--color-text);
    padding: var(--spacing-1) var(--spacing-2);
    font-size: var(--font-size-16);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: 2px solid var(--color-border);
  }

  .project-metrics {
    margin-bottom: var(--spacing-3);
  }

  .metric {
    background: var(--color-bg-secondary);
    padding: var(--spacing-3);
    font-size: var(--font-size-16);
    color: var(--color-text-secondary);
    border-left: 5px solid var(--color-border);
    margin-bottom: var(--spacing-2);
  }

  .project-achievements {
    list-style: disc;
    padding-left: var(--spacing-4);
    margin: 0;
    flex-grow: 1;
  }

  .project-achievements li {
    padding-left: var(--spacing-2);
    margin-bottom: var(--spacing-2);
    color: var(--color-text);
    font-size: var(--font-size-16);
    line-height: var(--line-height-normal);
  }

  .project-achievements li:last-child {
    margin-bottom: 0;
  }

  .project-footer {
    margin-top: var(--spacing-4);
    padding-top: var(--spacing-3);
    border-top: 1px solid var(--color-border);
  }

  .view-details-link {
    color: var(--color-link);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--font-size-16);
    display: inline-flex;
    align-items: center;
    transition: all var(--transition-base);
  }

  .view-details-link:hover {
    color: var(--color-link-hover);
    text-decoration: underline;
  }

  .view-details-link:focus {
    outline: var(--focus-width) solid var(--color-focus);
    outline-offset: 2px;
    background-color: var(--color-focus);
    color: var(--color-text);
    padding: var(--spacing-1) var(--spacing-2);
  }

  @media (max-width: 768px) {
    .project-card {
      padding: var(--spacing-4);
    }

    .project-header h3 {
      font-size: var(--font-size-19);
    }

    .project-description {
      font-size: var(--font-size-16);
    }

    .project-achievements li {
      font-size: var(--font-size-16);
    }

    .tech-tag {
      font-size: var(--font-size-14);
    }
  }
</style>