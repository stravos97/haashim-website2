---
import type { Certification } from '../data';

export interface Props {
  certification: Certification;
  index: number;
}

const { certification, index } = Astro.props;
const isPlanned = certification.date.toLowerCase().includes('planned');
---

<article aria-label={`${certification.name} certification`} role="article">
  <h3 class="govuk-heading-m mb-2" id={`cert-${index}`}>
    {certification.name}
    {isPlanned && <span class="govuk-tag govuk-tag--yellow ml-2">Planned</span>}
  </h3>
  
  <p class="govuk-body font-bold mb-1" aria-describedby={`cert-${index}`}>
    {certification.issuer}
  </p>
  
  <p class="govuk-body-s govuk-text-colour--secondary mb-4">
    <time datetime={certification.date}>{certification.date}</time>
    {certification.credentialId && <span> • ID: {certification.credentialId}</span>}
    {certification.expiryDate && <span> • Expires: {certification.expiryDate}</span>}
  </p>
  
  {certification.description && (
    <p class="govuk-body mb-3">
      {certification.description}
    </p>
  )}
  
  {certification.skills && certification.skills.length > 0 && (
    <p class="govuk-body-s govuk-text-colour--secondary mb-3">
      <strong>Skills:</strong> {certification.skills.join(' • ')}
    </p>
  )}
  
  {certification.verificationUrl && !isPlanned && (
    <p class="govuk-body-s">
      <a href={certification.verificationUrl} 
         class="govuk-link"
         target="_blank"
         rel="noopener noreferrer"
         aria-label={`Verify ${certification.name} certification (opens in new tab)`}>
        Verify certificate →
      </a>
    </p>
  )}
</article>

<style>
  .ml-2 {
    margin-left: 8px;
  }
  
  .govuk-tag--yellow {
    background-color: var(--govuk-colour-yellow);
    color: var(--govuk-colour-black);
  }
  
  article {
    margin-bottom: var(--govuk-spacing-8);
  }
  
  article:last-child {
    margin-bottom: 0;
  }
</style>