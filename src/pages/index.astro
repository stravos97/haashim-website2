		function checkNavScroll() {
			const navMenu = document.querySelector('.nav-menu');
			if (navMenu.scrollWidth > navMenu.clientWidth) {
				// Show visual indicator that there's more content
				navMenu.classList.add('scrollable');
			} else {
				navMenu.classList.remove('scrollable');
			}
		}

		// Enhanced navigation with auto-scrolling to active item
		function highlightNavOnScroll() {
			const navLinks = document.querySelectorAll('.nav-menu a');
			const navMenu = document.querySelector('.nav-menu');
			const sections = document.querySelectorAll('section');
			const scrollPos = window.scrollY;

			// Determine which section is in view
			let currentSection = '';
			sections.forEach(section => {
				const sectionTop = section.offsetTop - 100; // Offset for header
				const sectionHeight = section.offsetHeight;

				if (scrollPos >= sectionTop && scrollPos < sectionTop + sectionHeight) {
					currentSection = section.getAttribute('id');
				}
			});

			// Update nav links
			navLinks.forEach(link => {
				// Remove active class from all links
				link.classList.remove('active');

				// Add active class to current section's link
				const href = link.getAttribute('href').substring(1);
				if (href === currentSection) {
					link.classList.add('active');

					// Auto-scroll navigation to make active item visible
					if (navMenu) {
						// Calculate position of active link relative to navigation container
						const linkRect = link.getBoundingClientRect();
						const navRect = navMenu.getBoundingClientRect();

						// Check if active link is not fully visible
						if (linkRect.left < navRect.left || linkRect.right > navRect.right) {
							// Calculate scroll position to center the active link in the navigation
							const scrollLeft = link.offsetLeft - navMenu.clientWidth / 2 + link.clientWidth / 2;

							// Smooth scroll the navigation horizontally
							navMenu.scrollTo({
								left: scrollLeft,
								behavior: 'smooth'
							});
						}
					}
				}
			});
		}

